<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.yjk.sample.bind_kotlin.DataProfile"/>
        <variable
            name="dataProfile"
            type="com.yjk.sample.bind_kotlin.DataProfile" />
    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{dataProfile.name}"
        android:textSize="20dp"
        android:background="@color/teal_200"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{dataProfile.age}"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{(dataProfile.gender == dataProfile.GENDER_MALE) ? &quot;male&quot; : &quot;female&quot; }"
        android:textSize="20dp"/>


</LinearLayout>



</layout>
